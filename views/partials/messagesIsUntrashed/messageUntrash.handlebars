<div class="card" id="{{this.id}}">
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <div class="image-avatar">
                    <img id="avatar" src="{{this.avatar}}" alt="">
                    <p id="handle" class="card-title">{{this.handle}}</p>
                </div>
                <span class="twitter">{{this.source}} |</span><span id="timestamp">{{this.timestamp}}</span>
                <p id="score">Score: {{this.score}}</p>
                <p id="content" class="card-text">{{this.content}}.</p>
            </div>
            <div class="col-sm-12 col-md-4">
                <div class="started">
                    <button data-id="{{this.id}}" data-start="true" class="btn btn-message">Star Message!</button>
                    <button class="trash btn btn-trash" data-id="{{this.id}}" data-trash="true"><i class="fas fa-trash"></i></button>
                </div>
            </div>
        </div>
    </div>
</div>

